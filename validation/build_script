# !/bin/bash
# Temporary aggragate build script for SPARTA, static analysis, and normal Gradle build
# TODO make portable, move event validator

javac -cp soot-trunk.jar:android.jar ./StaticEventValidator.java

cd ..
gradle build

cd ./validation

# Don't fail on error:
java -ea -cp ../src:soot-trunk.jar:android.jar:./ StaticEventValidator failOnError -process-dir ../build/outputs/apk/VoiceRecorder-debug.apk -p jtp.event-validation on -p cg.cha off -allow-phantom-refs -android-jars ~/android/platforms/ -x 'com.acg.*' -x 'com.google.*' -x 'com.android.*' -x 'android.support.*' -x 'sparta.*'  -f n

# TODO need a better way to ignore libraries
# add failOnError after StaticEventValidator to fail on error

cd ../
./gradlew compileDebugJavaWithJavac -PrunSparta=true
./gradlew clean
./gradlew build

